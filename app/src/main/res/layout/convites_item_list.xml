<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fotoConvite"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avatarteste" />

            <TextView
                android:id="@+id/nomeConvite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/fotoConvite"
                android:text="Fulano de Tal"
                android:textColor="@color/colorPreto"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivAceitarConvite"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_convite_uncheck" />
            <ImageView
                android:id="@+id/ivConviteAceito"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_convite_checked" />

            <TextView
                android:id="@+id/statusConvite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nomeConvite"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/fotoConvite"
                android:text="Teste Aqui dos Status"
                android:textColor="@color/colorPreto" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>