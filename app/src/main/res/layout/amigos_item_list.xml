<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fotoAmigo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avatarteste"/>

            <TextView
                android:id="@+id/nomeAmigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fulano de Tal"
                android:layout_toEndOf="@+id/fotoAmigo"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorPreto"
                android:textSize="17sp"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/statusAmigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teste Aqui dos Status"
                android:textColor="@color/colorPreto"
                android:layout_toEndOf="@+id/fotoAmigo"
                android:layout_below="@+id/nomeAmigo"
                android:layout_marginStart="5dp"/>

        </RelativeLayout>




    </androidx.cardview.widget.CardView>


</RelativeLayout>