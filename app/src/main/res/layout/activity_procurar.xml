<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ProcurarActivity">


    <EditText
        android:id="@+id/etProcurarPessoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="14"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:hint="Digite o nome da pessoa"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_procurar_blue"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/etProcurarPessoa"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCttProcurarCtt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/etProcurarPessoa">
    </androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>